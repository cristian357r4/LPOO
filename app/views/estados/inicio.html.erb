<p id="notice"><%= notice%></p>
<p id="alert"><%= alert%></p>
<h1>Estados</h1>

<table>
  <thead>
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th>Pais</th>
  </tr>
  </thead>

  <tbody>
  <% @estados.each do |estado| %>
    <tr>
      <td><%= estado.nombre %></td>
      <td><%= estado.descripcion %></td>
      <td><%= estado.pais_id %></td>
      <td><%= link_to 'Mostrar', mostrar_estado_path(estado.id) %></td>
      <td><%= link_to 'Editar' , editar_estado_path(estado.id)%></td>
      <td><%= link_to 'Eliminar',eliminar_estado_path(estado.id), method: :delete, data: {confirm: 'Estas seguro?'}%></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Nuevo Estado', estado_nuevo_path %>
