<h1>Editar Estado</h1>
<%= form_with(model: @estado,url: actualizar_estado_path,local: true) do |form| %> 

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre%>
    <%= form.hidden_field :id %>
  </div>

  <div class="field">
    <%= form.label :descripcion %>
    <%= form.text_field :descripcion %>
  </div>

  <div class="field">
    <%= form.label :pais_id %>
    <%= form.text_field :pais_id %>
  </div>

  <div class="actions">
    <%= form.submit "Actualizar"%>
  </div>


<% end %>

<%= link_to 'Regresar', estados_inicio_path %>