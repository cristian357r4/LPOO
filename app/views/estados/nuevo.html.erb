<h1>Formulario Estado</h1>

<%= form_with(model: @estado,url: estado_crear_path ,local: true) do |form| %> 

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div class="field">
    <%= form.label :descripcion %>
    <%= form.text_field :descripcion %>
  </div>

  <div class="field">
    <%= form.label :pais_id %>
    <%= form.text_field :pais_id %>
  </div>

  <div class="actions">
    <%= form.submit "Guardar"%>
  </div>


<% end %>

<%= link_to 'Regresar', estados_inicio_path %>